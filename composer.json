{
    "name": "friendsofhyperf/icomet",
    "description": "The IComet Client for Hyperf.",
    "type": "library",
    "license": "MIT",
    "authors": [{
        "name": "huangdijia",
        "email": "huangdijia@gmail.com"
    }],
    "autoload": {
        "psr-4": {
            "FriendsOfHyperf\\IComet\\": "src/"
        }
    },
    "require": {
        "friendsofhyperf/http-client": "^3.0",
        "hyperf/di": "~3.0.0",
        "hyperf/utils": "~3.0.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "phpstan/phpstan": "^1.0",
        "swoole/ide-helper": "dev-master"
    },
    "extra": {
        "hyperf": {
            "config": "FriendsOfHyperf\\IComet\\ConfigProvider"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "cs-fix": "php-cs-fixer fix $1",
        "analyse": "phpstan analyse --memory-limit 300M -l 0 -c phpstan.neon ./src"
    }
}